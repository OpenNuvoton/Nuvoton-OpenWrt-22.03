/dts-v1/;

#include "nuc970.dtsi"
/ {
	model = "numaker-hmi-n9h30";
	compatible = "nuvoton,nuc972-evb", "nuvoton,nuc972", "nuvoton,nuc970";

	chosen {
		bootargs = "noinitrd rootfstype=squashfs,ubifs console=ttyS0,115200n8 rdinit=/sbin/init mem=64M lpj=744448";
	};

	reserved-memory {
		ranges;
		#address-cells = <1>;
		#size-cells = <1>;

		display_buf: display_buf@0 { /* 800 x 480 x 4 x 2 = 0x2EE000 (RGB888 dual buffer) */
			reg = <0x2800000 0x2EE000>;
			no-map;
		};

		ge2d_buf: ge2d_buf@0 { /* 800 x 480 x 4 = 0x177000 (RGB888 dual buffer) */
			reg = <0x3B9B000 0x177000>;
			no-map;
		};
	};

	apb {
		uart1: serial@b8000100 {
			status = "disabled";
		};

		uart2: serial@b8000200 {
			status = "disabled";
		};

		uart3: serial@b8000300 {
			status = "disabled";
		};

		uart4: serial@b8000400 {
			status = "disabled";
		};

		can0: can@b800b000 {
			status = "disabled";
		};

		can1: can@b800b400 {
			status = "disabled";
		};

		kpi: kpi@b8008000 {
			status = "disabled";
		};

		rtc: rtc@b8004000 {
			status = "disabled";
		};

		jpeg: jpeg@b000a000 {
			status = "okay";
		};

		adc: adc@b800a000 {
			keypad-status = "disabled";
			touch-status = "okay";
			status = "okay";
		};
		
		nadc: nadc@b800a000 {
			status = "disabled";
		};

		i2c_gpio@0 {
			status = "disabled";
		};

		i2c0: i2c0@b8006000 {
			status = "okay";

			nau8822: nau8822@1a {
				compatible = "nuvoton,nau8822";
				reg = <0x1a> ;
			};
		};

		i2c1: i2c1@b8006100 {
			status = "disabled";
		};

		pwm0: pwm0@b8007000 {
			status = "disabled";
		};

		pwm1: pwm1@b8007000 {
			status = "disabled";
		};

		pwm2: pwm2@b8007000 {
			status = "disabled";
		};

		pwm3: pwm3@b8007000 {
			status = "disabled";
		};

	};

	ahb {
		usbh_ehci@b0005000 {
		    pm_vbus_off = <0>;
			status = "okay";
		};
		usbh_ohci@b0007000 {
			status = "okay";
		};

		crypto@b000f000 {
			status = "okay";
		};

		usbdev@b0006000 {
			status = "okay";
		};

		fmi@b000d000 {
			compatible = "nuvoton,nuc970-fmi", "nand0";
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_nand_pc>;
			status = "okay";

			nand-ecc-mode = "hw_oob_first";
			nand-ecc-algo = "bch";
			nand-bus-width = <8>;
			nand-ecc-strength = <4>;
			nand-ecc-step-size = <512>;
			nand-on-flash-bbt;

			partitions {
				compatible = "fixed-partitions";
				#address-cells = <1>;
				#size-cells = <1>;

				uboot@0 {
					label = "uboot";
					reg = <0x00000000 0x00180000>;
				};
				dtb@180000 {
					label = "dtb";
					reg = <0x00180000 0x00020000>;
				};
				firmware@200000 {
					label = "firmware";
					reg = <0x00200000 0x00000000>;
				};
			};
		};

		sdh@b000c000 {
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_sd0>;
			status = "okay";
		};

		emac0@b0002000 {
			status = "okay";
		};
		cap@b000e000 {
			status = "disabled";
		};
		dma@b0004000 {
			status = "disabled";
		};
		ebi@b0001000 {
			status = "disabled";
		};
		emac1@b0003000 {
			status = "disabled";
		};

		lcd@b0008000 {
			status = "okay";
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_lcd_24bit>;
			memory-region = <&display_buf>;
			type = <0x200>;
			bpp = <32>;
			width = <800>;
			height = <480>;
			xres = <800>;
			yres = <480>;
			pixclock = <32000000>;
			left_margin = <40>;
			right_margin = <196>;
			hsync_len = <20>;
			upper_margin = <23>;
			lower_margin = <19>;
			vsync_len = <3>;
			dccs = <0x0000020a>;
			fbctrl = <0x03200320>;
			devctl = <0x070000c0>;
			scale = <0x04000400>;
			gpio_blen = <0xC3>;
			gpio_lcs = <0xC2>;

		};

		ge2d@b000b000 {
			status = "okay";
			memory-region = <&ge2d_buf>;
		};

		i2s: i2s@b0009000 {
			status = "okay";
		};

		i2s_pcm: i2s_pcm {
			status = "okay";
		};

		sound {
			compatible = "nuvoton,nuc970-audio";
			i2s-controller = <&i2s>;
			i2s-platform = <&i2s_pcm>;
		};
	};
};
